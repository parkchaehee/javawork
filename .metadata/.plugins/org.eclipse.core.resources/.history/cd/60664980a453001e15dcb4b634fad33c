package array2d;

public class Array2d {

	public static void main(String[] args) {
		// 정수형 2차원 배열
		int[][] arr = new int[2][3];    //[행][열]
		
		System.out.println(arr.length); //행의 크기: 2행
		System.out.println(arr[0].length); //1열의 크기: 3 //행번호로 인덱싱
		System.out.println(arr[1].length); //2열의 크기: 3
		
		//전체출력
		for(int i=0; i<arr.length; i++) {
			for(int j=0; j<arr[i].length; j++) {
				System.out.print(arr[i][j] + " ");
			}
			System.out.println(); //줄바꿈
		}
		//배열에 값을 저장
		arr[0][0] = 1;
		arr[0][1] = 2;
		arr[0][2] = 3;
		arr[1][0] = 4;
		arr[1][1] = 5;
		arr[1][2] = 6;
		arr[2][0] = 7;
		arr[2][1] = 8;
		arr[2][2] = 9;
		
		//특정한 요소를 인덱싱
		System.out.println(arr[1][1]);

	}

}
