package classes.constructor;

//참조자료형 - Person 클래스 정의(int 기본자료형)
public class Person {
	String name;  //사람이름//선언만, 사용할때 대입
	float height; //키
	float weight; //몸무게
	
	//기본 생성자
	public Person() {}
	
	//매개변수가 있는 생성자
	public Person(String n) {//이름 매개변수
		name = n;
	}
	
	//메서드
	public void showPersonInfo() {
		System.out.printf("이름: %s, 키: %.1f, 몸무게: %.1f:", 
				name, height, weight);
	}
	

}
