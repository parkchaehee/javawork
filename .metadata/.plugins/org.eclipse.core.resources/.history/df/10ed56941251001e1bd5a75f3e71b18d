package reference.subject2;

import javax.security.auth.Subject;

import reference.subjects.Student;

public class student { //클래스안에 변수가 쓰이면 생략//main안에서는 해야함
	private int studentId;   //int studentId = 0
	private String studentName; //String studentName = null
	private Subject[] subjects;
	
	public Student(int studentId, String studentName) {
		this.studentId = studentId;
		this.studentName = studentName;
		subjects = new Subjects[10]; //과목을 저장할 배열10개저장
	}
	
	//과목추가
	public void addSubject(String name, int score) {
		//과목 객체를 생성해서 값(과목이름, 점수)을 저장
		Subject subject = new Subject();
		subject.setSubjectName(name);
		subject.setScorePoint(score);
		
		//과목을 배열에 저장
		//subjects[0] = subject; //1개 저장
		for(int i=0; i<subjects.length; i++) {
			if(subjects[i] == null)
			subjects[i] = subject;
			break;
		}
	}
	//학생정보출력
	public void showStudentInfo() {
		for(int i=0; i<subjects.length; i++) {
			Subject subject = subjects[i];
			System.out.println("학생 " + studentName + "의 " + 
					subject.getSubjectName()+ "점수는 " + subject.getScorePoint() + "점 입니다."));
		}
	}
	

}
