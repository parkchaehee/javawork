package interfaceex.remocon;

public class Television implements RemoteControl{
	
	//필드
	private int volume;

	@Override
	public void turnOn() {
		System.out.println("티비를 켭니다.");
	}
	@Override
	public void turnOff() {
		System.out.println("티비를 끕니다.");
	}
	@Override
	public void setVolume(int volume) {
		this.volume = volume;
		System.out.println("현재 TV 볼륨: " + this.volume);
	}
}
